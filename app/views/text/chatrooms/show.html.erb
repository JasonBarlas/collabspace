<div id="chatroom-id" data-chatroom-id="<%= @chatroom.id %>" class="flex flex-col h-screen bg-white rounded-lg shadow-lg max-w-xl mx-auto p-4">
  <!-- Messages Container -->
  <div id="messages-container" class="flex-1 overflow-y-auto p-4 bg-gray-100 rounded-lg mb-4">
    <% if @chatroom.messages.any? %>
      <% @chatroom.messages.each do |message| %>
        <div class="mb-2">
          <span class="font-semibold text-indigo-600"><%= message.user.username %>:</span>
          <span class="text-gray-800"><%= message.content %></span>
        </div>
      <% end %>
    <% else %>
      <div class="text-center text-gray-500">No messages yet. Be the first to send a message!</div>
    <% end %>
  </div>

  <!-- Message Input and Send Button -->
  <div class="flex items-center mt-1">
    <input id="message-input" type="text" placeholder="Type a message" class="flex-[1] p-3 bg-gray-200 text-gray-700 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
    <button id="send-button" class="ml-4 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors">Send</button>
  </div>
</div>

<!-- Hidden element to store the current user's ID -->
<div id="user-id" data-user-id="<%= current_user.id %>" style="display: none;"></div>
