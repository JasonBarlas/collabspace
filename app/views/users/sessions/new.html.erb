<div class="min-h-screen min-w-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign In</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">

        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all", placeholder: "your@email.com" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all", placeholder: "••••••••" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <label class="flex items-center">
              <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              <span>
                <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600"%>
              </span>
            </label>
            <a href="#" class="text-sm text-indigo-600 hover:text-indigo-500">Forgot password?</a>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign In", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition-colors" %>
        </div>
      </div>

    <% end %>

    <!-- Sign Up link -->
    <div class="mt-6 text-center text-sm text-gray-600">
      Don't have an account? 
      <a href="<%= new_registration_path(resource_name) %>" class="text-indigo-600 hover:text-indigo-500 font-medium">Sign Up</a>
    </div>
  </div>
</div>
