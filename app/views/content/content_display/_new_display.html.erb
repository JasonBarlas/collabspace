<h1 class="text-2xl font-bold mb-4">Create a New Post</h1>

<%= form_with model: new_post, local: true do |form| %>
  <!-- Title field -->
  <div class="mb-4">
    <%= form.label :title, class: "block text-lg font-semibold" %>
    <%= form.text_field :title, required: true, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
  </div>

  <!-- Content field -->
  <div class="mb-4">
    <%= form.label :content, class: "block text-lg font-semibold" %>
    <%= form.text_area :content, required: true, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
  </div>

  <!-- Category selection (optional) -->
  <div class="mb-4">
    <%= form.label :category_id, "Category", class: "block text-lg font-semibold" %>
    <%= form.collection_select :category_id, categories, :id, :name, { include_blank: true }, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
  </div>

  <!-- Submit button -->
  <div>
    <%= form.submit "Create Post", class: "w-full py-3 px-6 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

<% end %>
