<h1 class="text-2xl font-bold mb-4">Your Friends</h1>

<%= form_with model: new_friendship, local: true do |form| %>
  <!-- Friend selection -->
  <div class="mb-4">
    <%= form.label :friend_id, "Select a User to add as friend", class: "block text-lg font-semibold" %>
    <%= form.collection_select :friend_id, non_friends, :id, :username, { include_blank: "Select a User" }, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
  </div>

  <!-- Submit button -->
  <div>
    <%= form.submit "Add Friend", class: "w-full py-3 px-6 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %> 
  </div>

<% end %>
